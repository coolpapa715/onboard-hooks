{
  "name": "@pooltogether/hooks",
  "version": "0.0.1",
  "description": "Useful hooks for PoolTogether applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/ddesrosier/pooltogether-hooks.git",
  "author": "PoolTogether Inc.",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsc-watch --onSuccess \"node ./dist/index.js\" ",
    "build": "tsc",
    "reinstall": "rm -rf node_modules/ && yarn install",
    "prepublish": "tsc",
    "test": "jest",
    "testcov": "jest --coverage --coverageDirectory=coverage && open ./coverage/index.html",
    "watch": "yarn run test --watch"
  },
  "dependencies": {
    "@pooltogether/bnc-onboard": "^1.25.0-b",
    "@pooltogether/current-pool-data": "^3.4.3",
    "@pooltogether/utilities": "^0.0.17",
    "ethers": "^5.1.4",
    "jotai": "^0.16.5",
    "js-cookie": "^2.2.1",
    "lodash.clonedeep": "^4.5.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,js}"
    ],
    "coverageReporters": [
      "html"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).+(ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
